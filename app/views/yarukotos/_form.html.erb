<%= form_with(model: yarukoto, local: true) do |f| %>

  <% if yarukoto.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% yarukoto.errors.full_messages.each do |yarukoto| %>
          <li><%= yarukoto %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'メッセージ' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>